<head>
<title>area</title>

<h1>Calculating Area using Javascript</h1>

<list>

<button onclick="area_triangle()"id="btnl">triangle</button> 
<button onclick="area_rectangle()"id="btn2">rectangle</button> 
<button onclick="area_circle()"id="btn3">circle</button> 

</list>

<script>
function area_triangle(){
var side1=parseInt(prompt('Enter side1 in cm'));
var side2=parseInt(prompt('Enter side2 in cm'));
var side3=parseInt(prompt('Enter side3 in cm'));
var s=(side1+side2+side3)/2;
var area = Math.sqrt(s*((s-side1)*(s-side2)*(s-side3)));
document.write("<br>"+"Area of triangle is="+area.toFixed(2) + "sq.cm.");
}

function area_rectangle(){
var length=parseInt(prompt('Enter length in cm'));
var breadth=parseInt(prompt('Enter breadth in cm'));
var area1=length*breadth;
document.write("<br>"+"Area of rectangle is= "+area1.toFixed(2) + "sq.cm.");
}
function area_circle(){
var radius=parseInt(prompt('Enter radius in cm'));
var area2=3.14*radius*radius;
document.write("<br>"+"Area of circle is="+area2.toFixed(2) + "sq.cm.");
}

</script>
</head>
</html>


